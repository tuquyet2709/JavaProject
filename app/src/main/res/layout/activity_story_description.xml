<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackGround"
    android:orientation="vertical"
    tools:context="com.example.tuquyet.javaproject.story.StoryDescription">

    <ImageView
        android:id="@+id/img_description"
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:layout_gravity="center|top"
        android:layout_marginTop="30dp"
        android:layout_weight="6"
        android:src="@drawable/bia_32"

        />


    <TextView
        android:id="@+id/textview_description"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="top"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_weight="2"
        android:maxLines="7"
        android:paddingBottom="7dp"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:paddingTop="7dp"
        android:scrollbars="vertical"
        android:text="Mot cai gi do dai dai mot ti de test thoi"
        android:textColor="@color/colorBlack"
        android:textSize="13dp"
        android:textStyle="italic"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:gravity="center|bottom">

        <Button
            android:id="@+id/button_doctruyen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="center"
            android:text="Đọc truyện"
            android:textAllCaps="false"
            android:textColor="#ff0000"
            android:textSize="30dp" />



    </LinearLayout>

</LinearLayout>
