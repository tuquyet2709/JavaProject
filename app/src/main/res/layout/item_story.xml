<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_story"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_5"
    android:orientation="vertical"
    app:cardCornerRadius="10dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/truyen1">

            <ImageView
                android:id="@+id/img_bia"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_100"
                android:layout_margin="@dimen/dp_10"
                android:scaleType="fitXY"

                android:src="@drawable/bia_13" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textview_storyname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/dp_5"
                    android:text="Ỷ thiên đồ long ký"
                    android:textSize="20dp" />
                <TextView
                    android:id="@+id/textview_storydescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Describle"
                    android:textStyle="italic"
                    android:maxLines="5"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/dp_5"
                    android:textSize="10dp"

                    />

            </LinearLayout>


        </LinearLayout>





</android.support.v7.widget.CardView>
